{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "preserve",
    "lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
